{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2022",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    
    "noImplicitAny": true,
    "strictNullChecks": true,
    "moduleResolution": "Node10",
    "isolatedModules": true,
    "noEmit": true,
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "test"]
} 
